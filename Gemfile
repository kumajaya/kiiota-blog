source "https://rubygems.org"

# --- Core Jekyll ---
gem "jekyll", "~> 4.3.3"

# --- Plugins sesuai _config.yml ---
gem "jekyll-feed"          # RSS feed generator
gem "jekyll-seo-tag"       # SEO metadata
gem "jekyll-remote-theme"  # Allow themes from GitHub
gem "jekyll-archives"      # Generate tag/category archives

# --- Optional: untuk pengembangan lokal ---
group :development do
  gem "webrick"            # HTTP server for local preview
end
